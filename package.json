{
  "name": "mad-mathematics",
  "version": "2.0.0",
  "description": "Educational math game suite for practicing arithmetic operations - React version",
  "type": "module",
  "scripts": {
    "dev": "yarn --cwd mad-mathematics-react dev",
    "build": "yarn --cwd mad-mathematics-react build",
    "preview": "yarn --cwd mad-mathematics-react preview",
    "test": "yarn --cwd mad-mathematics-react test",
    "test:run": "yarn --cwd mad-mathematics-react test:run",
    "test:coverage": "yarn --cwd mad-mathematics-react test:coverage",
    "e2e": "yarn --cwd mad-mathematics-react e2e",
    "commit": "cz",
    "lint": "yarn --cwd mad-mathematics-react lint",
    "lint:fix": "yarn --cwd mad-mathematics-react lint:fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,html,css,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,html,css,md,json}\"",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "education",
    "math",
    "game"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "validate-branch-name": "^1.3.2"
  },
  "packageManager": "yarn@4.11.0"
}
