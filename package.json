{
  "name": "mad-mathematics",
  "version": "1.0.0",
  "description": "Educational math game suite for practicing arithmetic operations",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:related": "vitest related",
    "commit": "cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,html,css,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,md,json}\"",
    "prepare": "husky",
    "start:dev": "python3 -m http.server 8000",
    "playwright:install": "npx playwright install --with-deps",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:report": "npx playwright show-report"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "education",
    "math",
    "game"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jsdom": "^23.0.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "validate-branch-name": "^1.3.2",
    "vitest": "^1.0.0",
    "vitest-localstorage-mock": "^0.1.0",
    "@playwright/test": "^1.56.0"
  }
}
